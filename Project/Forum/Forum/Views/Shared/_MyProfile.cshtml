@using System.Linq

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card bg-dark bg-dark">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="cont d-flex align-items-center justify-content-center text-white text-center">
                                <img src="~/Source/UserAvatars/@ViewBag.User.AvatarUrl" alt="Admin" class="rounded-circle" width="150">
                                <div class="rounded-circle overlay d-flex align-items-center justify-content-center text-white text-center">
                                    <h1>+</h1>
                                </div>
                            </div>
                            <div class="mt-3">
                                @if (ViewBag.User.Role == "Admin")
                                {
                                    <h4 class="text-danger">@ViewBag.User.UserName</h4>
                                }
                                else
                                {
                                    <h4 class="text-white">@ViewBag.User.UserName</h4>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                @if (ViewBag.IsEdit)
                {
                    Forum.Models.User user = new Forum.Models.User();
                    
                    <div class="card bg-dark mt-3">
                        <form asp-controller="Profile" asp-action="EditSocial">
                            <ul class="list-group list-group-flush">
                                <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@user.Website" type="text" class="btn-outline-warning form-control text-white bg-dark" value="@ViewBag.User.Website">
                                    </div>
                                </li>
                                <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@user.Github type="text" class="btn-outline-warning form-control text-white bg-dark" value="@ViewBag.User.Github">
                                    </div>
                                </li>
                                <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@user.Twitter" type="text" class="btn-outline-warning form-control text-white bg-dark" value="@ViewBag.User.Twitter">
                                    </div>
                                </li>
                                <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#5865F2" class="bi bi-discord" viewBox="0 0 16 16"><path d="M13.545 2.907a13.227 13.227 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.19 12.19 0 0 0-3.658 0 8.258 8.258 0 0 0-.412-.833.051.051 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.041.041 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032c.001.014.01.028.021.037a13.276 13.276 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019c.308-.42.582-.863.818-1.329a.05.05 0 0 0-.01-.059.051.051 0 0 0-.018-.011 8.875 8.875 0 0 1-1.248-.595.05.05 0 0 1-.02-.066.051.051 0 0 1 .015-.019c.084-.063.168-.129.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.052.052 0 0 1 .053.007c.08.066.164.132.248.195a.051.051 0 0 1-.004.085 8.254 8.254 0 0 1-1.249.594.05.05 0 0 0-.03.03.052.052 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.235 13.235 0 0 0 4.001-2.02.049.049 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.034.034 0 0 0-.02-.019Zm-8.198 7.307c-.789 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612Zm5.316 0c-.788 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612Z"></path></svg> Discord</h6>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@user.Discord" type="text" class="btn-outline-warning form-control text-white bg-dark" value="@ViewBag.User.Discord">
                                    </div>
                                </li>
                                <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                    <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                                    <div class="col-sm-9 text-secondary">
                                        <input asp-for="@user.Facebook" type="text" class="btn-outline-warning form-control text-white bg-dark" value="@ViewBag.User.Facebook">
                                    </div>
                                </li>
                            </ul>
                            <div class="d-flex row align-items-center">
                                <div class="col-sm-12 align-content-center">
                                        <input type="submit" class="align-content-center btn btn-warning ms-3 m-2" target="__blank" value="Сохранить" />
                                </div>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="card bg-dark mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                                <span class="text-secondary">@ViewBag.User.Website</span>
                            </li>
                            <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                                <span class="text-secondary">@ViewBag.User.Github</span>
                            </li>
                            <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                                <span class="text-secondary">@ViewBag.User.Twitter</span>
                            </li>
                            <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#5865F2" class="bi bi-discord" viewBox="0 0 16 16"><path d="M13.545 2.907a13.227 13.227 0 0 0-3.257-1.011.05.05 0 0 0-.052.025c-.141.25-.297.577-.406.833a12.19 12.19 0 0 0-3.658 0 8.258 8.258 0 0 0-.412-.833.051.051 0 0 0-.052-.025c-1.125.194-2.22.534-3.257 1.011a.041.041 0 0 0-.021.018C.356 6.024-.213 9.047.066 12.032c.001.014.01.028.021.037a13.276 13.276 0 0 0 3.995 2.02.05.05 0 0 0 .056-.019c.308-.42.582-.863.818-1.329a.05.05 0 0 0-.01-.059.051.051 0 0 0-.018-.011 8.875 8.875 0 0 1-1.248-.595.05.05 0 0 1-.02-.066.051.051 0 0 1 .015-.019c.084-.063.168-.129.248-.195a.05.05 0 0 1 .051-.007c2.619 1.196 5.454 1.196 8.041 0a.052.052 0 0 1 .053.007c.08.066.164.132.248.195a.051.051 0 0 1-.004.085 8.254 8.254 0 0 1-1.249.594.05.05 0 0 0-.03.03.052.052 0 0 0 .003.041c.24.465.515.909.817 1.329a.05.05 0 0 0 .056.019 13.235 13.235 0 0 0 4.001-2.02.049.049 0 0 0 .021-.037c.334-3.451-.559-6.449-2.366-9.106a.034.034 0 0 0-.02-.019Zm-8.198 7.307c-.789 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.45.73 1.438 1.613 0 .888-.637 1.612-1.438 1.612Zm5.316 0c-.788 0-1.438-.724-1.438-1.612 0-.889.637-1.613 1.438-1.613.807 0 1.451.73 1.438 1.613 0 .888-.631 1.612-1.438 1.612Z"></path></svg> Discord</h6>
                                <span class="text-secondary">@ViewBag.User.Discord</span>
                            </li>
                            <li class="bg-dark list-group-item text-white d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0 text-white"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                                <span class="text-secondary">@ViewBag.User.Facebook</span>
                            </li>
                        </ul>
                        <div class="d-flex row align-items-center">
                            <div class="col-sm-12 align-content-center">
                                <form method="post" asp-controller="Profile" asp-action="Index">
                                    <input type="submit" class="align-content-center btn btn-warning ms-3 m-2" target="__blank" asp-controller="Profile" asp-action="Index" asp-route-isEdit="true" value="Редактировать  " />
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-8">
                <a asp-controller="Profile" asp-action="NewArticle" class="text-decoration-none card bg-success mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center text-white">
                            <h5>Создать новую статью. <br /></h5>
                        </div>
                    </div>
                </a>
                @if (ViewBag.CountArticles != 0)
                {
                    for (int i = ViewBag.CountArticles - 1; i >= 0; i--)
                    {
                        <a asp-action="Article" asp-controller="Profile" asp-route-id="@ViewBag.Articles[i].Id" class="text-decoration-none card bg-dark mb-3">
                            <div class="card-body">
                                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                                    <div class="d-flex align-items-center mb-2 mb-lg-0 text-warning text-decoration-nones font-size-24 text-white px-3">
                                        @if (ViewBag.Articles[i].Name.Length > 36)
                                        {
                                            for (int j = 0; j < 36; j++)
                                            {
                                                @ViewBag.Articles[i].Name[j]
                                            }
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @ViewBag.Articles[i].Name
                                        }
                                    </div>
                                    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"></ul>
                                    <div class="text-warning px-3 mt-3 d-block link-dark text-decoration-none">
                                        <form method="post">
                                            <input class="btn-danger btn rounded-3 px-2" type="submit" value="X" asp-action="RemoveArticle" asp-controller="Profile" asp-route-id="@ViewBag.Articles[i].Id" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                }

            </div>  
        </div>
    </div>
</div>