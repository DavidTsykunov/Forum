@model Forum.ViewModels.LoginViewModel 
@{
    Layout = "_Layout";
    ViewBag.Title = "Вход";
}

<body class="text-center">
    <div class="form-signin">
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <h3 class="h5 mb-3 fw-normal text-white">Войдите в свой аккаунт</h3>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-floating ptd-10px">
                <input type="text" class="bg-dark text-white form-control" id="floatingInput" placeholder="Имя" asp-for="UserName">
                <label for="floatingInput" class="text-secondary" asp-for="UserName">Имя</label>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-floating ptd-10px">
                <input type="password" class="bg-dark text-white form-control" id="floatingPassword" placeholder="Пароль" asp-for="Password">
                <label for="floatingPassword" class="text-secondary" asp-for="Password">Пароль</label>
                <span asp-validation-for="Password"></span>
            </div>
            <input value="Войти" class="w-100 btn btn-lg bg-warning" type="submit"/>
        </form>
    </div>
</body>