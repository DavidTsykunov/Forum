@model User

@{
    Layout = "_Layout";
}

<form asp-action="EditUser" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">

        <label asp-for="UserName"></label>

        <input asp-for="UserName" class="form-control" />

    </div>

    <div class="form-group">

        <label asp-for="Email"></label>

        <textarea asp-for="Email" class="form-control"></textarea>

    </div>

    <div class="form-group">

        <label asp-for="Github"></label>

        <input asp-for="Github" class="form-control" />

    </div>

    <div class="form-group">

        <label asp-for="Website"></label>

        <input asp-for="Website" class="form-control" />

    </div>

    <div class="form-group">

        <label asp-for="Twitter"></label>

        <input asp-for="Twitter" class="form-control" />

    </div>

    <div class="form-group">

        <label asp-for="Discord"></label>

        <input asp-for="Discord" class="form-control" />

    </div>

    <div class="form-group">

        <label asp-for="Facebook"></label>

        <input asp-for="Facebook" class="form-control" />

    </div>

    <div class="text-center">

        <button class="btn btn-primary" type="submit">Сохранить</button>

        <a asp-action="Panel" class="btn btn-default">Отмена</a>

    </div>

</form> 